// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  chats     Chat[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Chat {
  id           Int       @id @default(autoincrement())
  participants User[]
  messages     Message[]
}

model Message {
  id        Int         @id @default(autoincrement())
  type      MessageType
  chat      Chat        @relation(fields: [chatId], references: [id])
  chatId    Int
  text      String?
  url       String?
  createdAt DateTime    @default(now()) @map("created_at")
}

enum MessageType {
  File
  Text
}
